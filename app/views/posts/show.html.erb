

<div class="row">
  <div class="col-md-6 well">
    <h3><%= @post.title %></h3>
    <p>
      <%= @post.content %>
    </p>
    <br>
    <% if logged_in? %>
      <%= link_to 'Edit Post', edit_post_path(@post), class: "btn btn-primary" %>
    <% end %>
    <div div class="text-right">
      <small >posted by </small><%= " #{@post.user.name}" %>
    </div>
  </div>
</div>



<h4>All Comments:</h4>

<% @post.comments.each do |comment| %>
  <div class="row">
    <div class="col-md-6 well">
      <p>
        <%= comment.content %>
      </p>
      <br>
      <small>commented by </small><%= "#{comment.user.name}" %>
    </div>
  </div>
<% end %>

<% if logged_in? %>
  <h4>Leave a comment:</h4>
  <%= form_for [@post, @comment] do |f| %>
    <div class="row">
      <%= f.text_area :content, rows: 3, class: 'col-md-6', placeholder: "在此輸入你的留言(至少2個字元)..." %>
    <div class="col-md-6">
      <%= f.submit 'Create Comment', class: 'btn btn-primary'%>
    </div>
    <br>
  <% end %>

<% end %>

<hr>
<br>
<div class: 'col-md-6'>
  <h4>
    <%= link_to 'Back to Postboard', posts_path %>
  </h4>
</div>
